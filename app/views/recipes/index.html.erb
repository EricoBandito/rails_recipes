<div id="container">
    <h3><%= link_to "About", "pages/about" %></h3>
    <h1>Food</h1>
    <% @recipes.each do |recipe|%>
    <div class="card">
        <% if recipe.thumbnail == ''%>
            <%= image_tag "no_image.png", alt: recipe.title %>
        <% else %>
            <img style="width:100%;" alt="<%= recipe.title %>" src="<%= recipe.thumbnail %>"/>
        <% end %>
        <h3><%= link_to recipe.title, recipe %></h3>

    </div>

    <% end %>
</div>

